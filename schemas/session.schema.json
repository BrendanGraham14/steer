{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Steer Session Configuration",
  "description": "Configuration file for Steer sessions, including workspace settings, tool configurations, and AI behavior customization.",
  "type": "object",
  "properties": {
    "$schema": {
      "description": "URL to the JSON schema file",
      "type": [
        "string",
        "null"
      ]
    },
    "metadata": {
      "type": [
        "object",
        "null"
      ],
      "additionalProperties": {
        "type": "string"
      }
    },
    "system_prompt": {
      "type": [
        "string",
        "null"
      ]
    },
    "tool_config": {
      "anyOf": [
        {
          "$ref": "#/$defs/PartialToolConfig"
        },
        {
          "type": "null"
        }
      ]
    },
    "workspace": {
      "anyOf": [
        {
          "$ref": "#/$defs/PartialWorkspaceConfig"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "$defs": {
    "BackendConfig": {
      "description": "Backend configuration for different tool execution environments",
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "tool_filter": {
              "description": "Tool filtering configuration for the local backend",
              "$ref": "#/$defs/ToolFilter"
            },
            "type": {
              "type": "string",
              "const": "local"
            }
          },
          "required": [
            "type",
            "tool_filter"
          ]
        },
        {
          "type": "object",
          "properties": {
            "server_name": {
              "type": "string"
            },
            "tool_filter": {
              "$ref": "#/$defs/ToolFilter"
            },
            "transport": {
              "$ref": "#/$defs/McpTransport"
            },
            "type": {
              "type": "string",
              "const": "mcp"
            }
          },
          "required": [
            "type",
            "server_name",
            "transport",
            "tool_filter"
          ]
        }
      ]
    },
    "McpTransport": {
      "description": "MCP transport configuration",
      "oneOf": [
        {
          "description": "Standard I/O transport (child process)",
          "type": "object",
          "properties": {
            "args": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "command": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "const": "stdio"
            }
          },
          "required": [
            "type",
            "command",
            "args"
          ]
        },
        {
          "description": "TCP transport",
          "type": "object",
          "properties": {
            "host": {
              "type": "string"
            },
            "port": {
              "type": "integer",
              "format": "uint16",
              "maximum": 65535,
              "minimum": 0
            },
            "type": {
              "type": "string",
              "const": "tcp"
            }
          },
          "required": [
            "type",
            "host",
            "port"
          ]
        },
        {
          "description": "Unix domain socket transport",
          "type": "object",
          "properties": {
            "path": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "const": "unix"
            }
          },
          "required": [
            "type",
            "path"
          ]
        },
        {
          "description": "Server-Sent Events transport",
          "type": "object",
          "properties": {
            "headers": {
              "type": [
                "object",
                "null"
              ],
              "additionalProperties": {
                "type": "string"
              }
            },
            "type": {
              "type": "string",
              "const": "sse"
            },
            "url": {
              "type": "string"
            }
          },
          "required": [
            "type",
            "url"
          ]
        },
        {
          "description": "HTTP streamable transport",
          "type": "object",
          "properties": {
            "headers": {
              "type": [
                "object",
                "null"
              ],
              "additionalProperties": {
                "type": "string"
              }
            },
            "type": {
              "type": "string",
              "const": "http"
            },
            "url": {
              "type": "string"
            }
          },
          "required": [
            "type",
            "url"
          ]
        }
      ]
    },
    "PartialBashConfig": {
      "type": "object",
      "properties": {
        "approved_patterns": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        }
      }
    },
    "PartialToolConfig": {
      "type": "object",
      "properties": {
        "approval_policy": {
          "anyOf": [
            {
              "$ref": "#/$defs/ToolApprovalPolicyConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "backends": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/$defs/BackendConfig"
          }
        },
        "tools": {
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": {
            "$ref": "#/$defs/PartialToolSpecificConfig"
          },
          "default": null
        },
        "visibility": {
          "anyOf": [
            {
              "$ref": "#/$defs/ToolVisibilityConfig"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "PartialToolSpecificConfig": {
      "anyOf": [
        {
          "$ref": "#/$defs/PartialBashConfig"
        }
      ]
    },
    "PartialWorkspaceConfig": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "path": {
              "type": [
                "string",
                "null"
              ],
              "default": null
            },
            "type": {
              "type": "string",
              "const": "local"
            }
          },
          "required": [
            "type"
          ]
        },
        {
          "type": "object",
          "properties": {
            "agent_address": {
              "type": "string"
            },
            "auth": {
              "anyOf": [
                {
                  "$ref": "#/$defs/RemoteAuth"
                },
                {
                  "type": "null"
                }
              ]
            },
            "type": {
              "type": "string",
              "const": "remote"
            }
          },
          "required": [
            "type",
            "agent_address"
          ]
        }
      ]
    },
    "RemoteAuth": {
      "description": "Authentication configuration for remote backends",
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "Bearer": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string"
                }
              },
              "required": [
                "token"
              ]
            }
          },
          "additionalProperties": false,
          "required": [
            "Bearer"
          ]
        },
        {
          "type": "object",
          "properties": {
            "ApiKey": {
              "type": "object",
              "properties": {
                "key": {
                  "type": "string"
                }
              },
              "required": [
                "key"
              ]
            }
          },
          "additionalProperties": false,
          "required": [
            "ApiKey"
          ]
        }
      ]
    },
    "ToolApprovalPolicy": {
      "description": "Tool approval policy configuration",
      "oneOf": [
        {
          "description": "Always ask for approval before executing any tool",
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "always_ask"
            }
          },
          "required": [
            "type"
          ]
        },
        {
          "description": "Pre-approved tools execute without asking",
          "type": "object",
          "properties": {
            "tools": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "uniqueItems": true
            },
            "type": {
              "type": "string",
              "const": "pre_approved"
            }
          },
          "required": [
            "type",
            "tools"
          ]
        },
        {
          "description": "Mixed policy: some tools pre-approved, others require approval",
          "type": "object",
          "properties": {
            "ask_for_others": {
              "type": "boolean"
            },
            "pre_approved": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "uniqueItems": true
            },
            "type": {
              "type": "string",
              "const": "mixed"
            }
          },
          "required": [
            "type",
            "pre_approved",
            "ask_for_others"
          ]
        }
      ]
    },
    "ToolApprovalPolicyConfig": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "$ref": "#/$defs/ToolApprovalPolicy"
        }
      ]
    },
    "ToolFilter": {
      "description": "Tool filtering configuration for backends",
      "oneOf": [
        {
          "description": "Include all available tools",
          "type": "string",
          "const": "all"
        },
        {
          "description": "Include only the specified tools",
          "type": "object",
          "properties": {
            "include": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false,
          "required": [
            "include"
          ]
        },
        {
          "description": "Include all tools except the specified ones",
          "type": "object",
          "properties": {
            "exclude": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false,
          "required": [
            "exclude"
          ]
        }
      ]
    },
    "ToolVisibilityConfig": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "$ref": "#/$defs/ToolVisibilityObject"
        }
      ]
    },
    "ToolVisibilityObject": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "whitelist": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "uniqueItems": true
            }
          },
          "additionalProperties": false,
          "required": [
            "whitelist"
          ]
        },
        {
          "type": "object",
          "properties": {
            "blacklist": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "uniqueItems": true
            }
          },
          "additionalProperties": false,
          "required": [
            "blacklist"
          ]
        }
      ]
    }
  }
}