{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Steer Session Configuration",
  "description": "Configuration file for Steer sessions, including workspace settings, tool configurations, and AI behavior customization.",
  "type": "object",
  "properties": {
    "$schema": {
      "description": "URL to the JSON schema file",
      "type": [
        "string",
        "null"
      ]
    },
    "metadata": {
      "type": [
        "object",
        "null"
      ],
      "additionalProperties": {
        "type": "string"
      }
    },
    "system_prompt": {
      "type": [
        "string",
        "null"
      ]
    },
    "tool_config": {
      "anyOf": [
        {
          "$ref": "#/definitions/PartialToolConfig"
        },
        {
          "type": "null"
        }
      ]
    },
    "workspace": {
      "anyOf": [
        {
          "$ref": "#/definitions/PartialWorkspaceConfig"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "definitions": {
    "BackendConfig": {
      "description": "Backend configuration for different tool execution environments",
      "oneOf": [
        {
          "type": "object",
          "required": [
            "tool_filter",
            "type"
          ],
          "properties": {
            "tool_filter": {
              "description": "Tool filtering configuration for the local backend",
              "allOf": [
                {
                  "$ref": "#/definitions/ToolFilter"
                }
              ]
            },
            "type": {
              "type": "string",
              "enum": [
                "local"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "endpoint",
            "name",
            "tool_filter",
            "type"
          ],
          "properties": {
            "auth": {
              "anyOf": [
                {
                  "$ref": "#/definitions/RemoteAuth"
                },
                {
                  "type": "null"
                }
              ]
            },
            "endpoint": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "tool_filter": {
              "$ref": "#/definitions/ToolFilter"
            },
            "type": {
              "type": "string",
              "enum": [
                "remote"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "image",
            "runtime",
            "tool_filter",
            "type"
          ],
          "properties": {
            "image": {
              "type": "string"
            },
            "runtime": {
              "$ref": "#/definitions/ContainerRuntime"
            },
            "tool_filter": {
              "$ref": "#/definitions/ToolFilter"
            },
            "type": {
              "type": "string",
              "enum": [
                "container"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "server_name",
            "tool_filter",
            "transport",
            "type"
          ],
          "properties": {
            "server_name": {
              "type": "string"
            },
            "tool_filter": {
              "$ref": "#/definitions/ToolFilter"
            },
            "transport": {
              "$ref": "#/definitions/McpTransport"
            },
            "type": {
              "type": "string",
              "enum": [
                "mcp"
              ]
            }
          }
        }
      ]
    },
    "ContainerRuntime": {
      "description": "Container runtime configuration",
      "type": "string",
      "enum": [
        "Docker",
        "Podman"
      ]
    },
    "McpTransport": {
      "description": "MCP transport configuration",
      "oneOf": [
        {
          "description": "Standard I/O transport (child process)",
          "type": "object",
          "required": [
            "args",
            "command",
            "type"
          ],
          "properties": {
            "args": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "command": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "stdio"
              ]
            }
          }
        },
        {
          "description": "TCP transport",
          "type": "object",
          "required": [
            "host",
            "port",
            "type"
          ],
          "properties": {
            "host": {
              "type": "string"
            },
            "port": {
              "type": "integer",
              "format": "uint16",
              "minimum": 0.0
            },
            "type": {
              "type": "string",
              "enum": [
                "tcp"
              ]
            }
          }
        },
        {
          "description": "Unix domain socket transport",
          "type": "object",
          "required": [
            "path",
            "type"
          ],
          "properties": {
            "path": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "unix"
              ]
            }
          }
        },
        {
          "description": "Server-Sent Events transport",
          "type": "object",
          "required": [
            "type",
            "url"
          ],
          "properties": {
            "headers": {
              "type": [
                "object",
                "null"
              ],
              "additionalProperties": {
                "type": "string"
              }
            },
            "type": {
              "type": "string",
              "enum": [
                "sse"
              ]
            },
            "url": {
              "type": "string"
            }
          }
        },
        {
          "description": "HTTP streamable transport",
          "type": "object",
          "required": [
            "type",
            "url"
          ],
          "properties": {
            "headers": {
              "type": [
                "object",
                "null"
              ],
              "additionalProperties": {
                "type": "string"
              }
            },
            "type": {
              "type": "string",
              "enum": [
                "http"
              ]
            },
            "url": {
              "type": "string"
            }
          }
        }
      ]
    },
    "PartialBashConfig": {
      "type": "object",
      "properties": {
        "approved_patterns": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        }
      }
    },
    "PartialToolConfig": {
      "type": "object",
      "properties": {
        "approval_policy": {
          "anyOf": [
            {
              "$ref": "#/definitions/ToolApprovalPolicyConfig"
            },
            {
              "type": "null"
            }
          ]
        },
        "backends": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/definitions/BackendConfig"
          }
        },
        "tools": {
          "default": null,
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": {
            "$ref": "#/definitions/PartialToolSpecificConfig"
          }
        },
        "visibility": {
          "anyOf": [
            {
              "$ref": "#/definitions/ToolVisibilityConfig"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "PartialToolSpecificConfig": {
      "anyOf": [
        {
          "$ref": "#/definitions/PartialBashConfig"
        }
      ]
    },
    "PartialWorkspaceConfig": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "type"
          ],
          "properties": {
            "path": {
              "default": null,
              "type": [
                "string",
                "null"
              ]
            },
            "type": {
              "type": "string",
              "enum": [
                "local"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "agent_address",
            "type"
          ],
          "properties": {
            "agent_address": {
              "type": "string"
            },
            "auth": {
              "anyOf": [
                {
                  "$ref": "#/definitions/RemoteAuth"
                },
                {
                  "type": "null"
                }
              ]
            },
            "type": {
              "type": "string",
              "enum": [
                "remote"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "image",
            "runtime",
            "type"
          ],
          "properties": {
            "image": {
              "type": "string"
            },
            "runtime": {
              "$ref": "#/definitions/ContainerRuntime"
            },
            "type": {
              "type": "string",
              "enum": [
                "container"
              ]
            }
          }
        }
      ]
    },
    "RemoteAuth": {
      "description": "Authentication configuration for remote backends",
      "oneOf": [
        {
          "type": "object",
          "required": [
            "Bearer"
          ],
          "properties": {
            "Bearer": {
              "type": "object",
              "required": [
                "token"
              ],
              "properties": {
                "token": {
                  "type": "string"
                }
              }
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": [
            "ApiKey"
          ],
          "properties": {
            "ApiKey": {
              "type": "object",
              "required": [
                "key"
              ],
              "properties": {
                "key": {
                  "type": "string"
                }
              }
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "ToolApprovalPolicy": {
      "description": "Tool approval policy configuration",
      "oneOf": [
        {
          "description": "Always ask for approval before executing any tool",
          "type": "object",
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "always_ask"
              ]
            }
          }
        },
        {
          "description": "Pre-approved tools execute without asking",
          "type": "object",
          "required": [
            "tools",
            "type"
          ],
          "properties": {
            "tools": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "uniqueItems": true
            },
            "type": {
              "type": "string",
              "enum": [
                "pre_approved"
              ]
            }
          }
        },
        {
          "description": "Mixed policy: some tools pre-approved, others require approval",
          "type": "object",
          "required": [
            "ask_for_others",
            "pre_approved",
            "type"
          ],
          "properties": {
            "ask_for_others": {
              "type": "boolean"
            },
            "pre_approved": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "uniqueItems": true
            },
            "type": {
              "type": "string",
              "enum": [
                "mixed"
              ]
            }
          }
        }
      ]
    },
    "ToolApprovalPolicyConfig": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "$ref": "#/definitions/ToolApprovalPolicy"
        }
      ]
    },
    "ToolFilter": {
      "description": "Tool filtering configuration for backends",
      "oneOf": [
        {
          "description": "Include all available tools",
          "type": "string",
          "enum": [
            "all"
          ]
        },
        {
          "description": "Include only the specified tools",
          "type": "object",
          "required": [
            "include"
          ],
          "properties": {
            "include": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        {
          "description": "Include all tools except the specified ones",
          "type": "object",
          "required": [
            "exclude"
          ],
          "properties": {
            "exclude": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "ToolVisibilityConfig": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "$ref": "#/definitions/ToolVisibilityObject"
        }
      ]
    },
    "ToolVisibilityObject": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "whitelist"
          ],
          "properties": {
            "whitelist": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "uniqueItems": true
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": [
            "blacklist"
          ],
          "properties": {
            "blacklist": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "uniqueItems": true
            }
          },
          "additionalProperties": false
        }
      ]
    }
  }
}